‎#include <iostream>
‎using namespace std;
‎
‎int main() {
‎    int n;
‎    cout << "Enter number of places: ";
‎    cin >> n;
‎
‎    int road[10][10];
‎
‎    cout << "Enter distances (0 if no road):\n";
‎    for(int i = 0; i < n; i++) {
‎        for(int j = 0; j < n; j++) {
‎            cin >> road[i][j];
‎        }
‎    }
‎
‎    // Display the distance matrix
‎    cout << "\nDistance Matrix:\n";
‎    for(int i = 0; i < n; i++) {
‎        for(int j = 0; j < n; j++) {
‎            cout << road[i][j] << "\t";
‎        }
‎        cout << endl;
‎    }
‎
‎    char choice;
‎    do {
‎        int start, end;
‎        cout << "\nEnter start place (0 to " << n-1 << "): ";
‎        cin >> start;
‎        cout << "Enter end place (0 to " << n-1 << "): ";
‎        cin >> end;
‎
‎        if(road[start][end] != 0)
‎            cout << "Shortest distance is: " << road[start][end] << endl;
‎        else
‎            cout << "No direct road found." << endl;
‎
‎        cout << "Do you want to check another route? (y/n): ";
‎        cin >> choice;
‎
‎    } while(choice == 'y' || choice == 'Y');
‎
‎    cout << "Program ended.\n";
‎    return 0;
‎}
‎
